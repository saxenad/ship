<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:id="@+id/ScrollView01" 
            android:layout_width="fill_parent" 
            android:layout_height="fill_parent" 
            android:background="#ede8e2"
            xmlns:android="http://schemas.android.com/apk/res/android">
            
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="20dp">

        <com.facebook.widget.ProfilePictureView
            xmlns:facebook="http://schemas.android.com/apk/res-auto"
            android:id="@+id/selection_profile_pic"
            android:layout_width="wrap_content"
            android:layout_height="95dp"
            android:layout_gravity="left"
            android:layout_weight="0.29"
            android:gravity="left"
            facebook:preset_size="small" />
   
        <TextView
            android:id="@+id/selection_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="0.50"
                android:textColor="#000000"
            android:textSize="18sp"
             android:background="@layout/shape" />

    </LinearLayout>


<TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Account Details" 
          android:textColor="#000000"
      android:textSize="18sp"
     android:paddingLeft="10dip"
            />
<View
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    android:background="#d3d3d3"/>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="email"
            android:textColor="#000000"
            android:textSize="20sp"
           android:paddingLeft="10dip"
             />

        <TextView
            android:id="@+id/emailAddress"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
                android:textColor="#000000"
                android:textSize="20sp"
            android:ems="10" />
    </LinearLayout>

           <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="phone" 
                android:textColor="#000000"
            android:textSize="20sp"
                android:paddingLeft="10dip"
            />

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
                android:textColor="#3063A5"
             android:textSize="20sp"
            android:inputType="number"
            android:paddingLeft="15dip"
            android:hint="Add Phone"
            android:textColorHint="#3063A5"
            
            android:background="@layout/shape"/>
        
    </LinearLayout>
    
           <TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Payment Details" 
          android:textColor="#000000"
            android:textSize="18sp"
                 android:paddingLeft="10dip"
            />
<View
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    android:background="#d3d3d3"/>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:layout_marginTop="20dp">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.25"
            android:text="Card" 
                android:textColor="#000000"
            android:textSize="20sp"
            android:paddingLeft="10dip"
            />

        <TextView
            android:id="@+id/creditCardNumber"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.75"
            android:ems="10" 
            android:textSize="20sp"
         android:hint="Add a Card Number"
        android:textColorHint="#3063A5"
         
           android:paddingLeft="15dip"
          android:textColor="#3063A5"
            android:background="@layout/shape"/>
        
    </LinearLayout>

               <TextView
    android:id="@+id/textView1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="Return Address" 
          android:textColor="#000000"
            android:textSize="18sp"
                 android:paddingLeft="10dip"
                 android:bottom="30dp"
            />
<View
    android:layout_width="fill_parent"
    android:layout_height="5dp"
    android:background="#d3d3d3"/>

       <LinearLayout
           android:layout_width="fill_parent"
